{
  "dataset_reader": {
    "type": "text_classification_txt",
    "tokenizer": {
    	"word_splitter": {
    		"type": "jieba"
    	}
    	},
    "token_indexers": {
      "tokens": {
        "type": "single_id"
      }
    },
    "testing": false,
    "max_sequence_length": 100
  },
  "train_data_path": "./data/train.csv",
  "validation_data_path": "./data/test.csv",
  "model": {
    "type": "basic_classifier_f1",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 300,
          "trainable": true
        }
      }
    },
    "seq2seq_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 200,
      "num_layers": 1,
      "dropout": 0.2
    },
    "seq2vec_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 400,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "dropout": 0.2
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["tokens", "num_tokens"]],
    "batch_size": 40
  },

  "trainer": {
    "num_epochs": 15,
    "grad_norm": 5.0,
    "patience": 4,
    "shuffle": true,
    "validation_metric": "+fscore",
    "cuda_device": -1,
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.9],
      "eps": 1e-07,
      "lr": 0.001
    }
  }
}